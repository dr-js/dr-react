:root {
  --color-text-80: #525e71;
}

:local(.sample) {
  width: 100%;
  height: 100%;
  pointer-events: none;
  display: flex;
  flex-flow: column;
  align-items: center;
  justify-content: center;
  &.sample-button { pointer-events: auto; }

  & > i {
    font-size: 26px;
    color: var(--color-text-80);
  }

  & > span {
    margin-top: 4px;
    font-size: 12px;
    color: rgba(39, 54, 77, 0.60);
  }
}
