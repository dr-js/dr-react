:local(.indicator-layer) {
  pointer-events: none;
  position: absolute;
  top: 0;
  left: 0;
  overflow: visible;
  z-index: 1; /* z-context-editor */

  & .select-range {
    position: absolute;
    background: rgba(255, 167, 57, 0.2);
    box-shadow: inset 0 0 0 1px rgba(255, 167, 57, 0.4);
  }
}
